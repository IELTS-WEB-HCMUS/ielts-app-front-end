<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Target Progress Chart</title>
  <style>
    .pie-container {
      width: 250px;
      height: 250px;
      border-radius: 50%;
      background: conic-gradient(#0f207e 0% 70%, #ccc 70% 100%);
      position: relative;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
      margin-bottom: 20px;
    }

    .pie-container::after {
      content: '70%';
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      font-size: 28px;
      font-weight: bold;
      color: white;
      text-shadow: 0 0 5px rgba(0, 0, 0, 0.7);
    }

    .score-info {
      font-size: 20px;
      text-align: center;
      color: #f5f5f5;
      background-color: #333;
      padding: 10px 20px;
      border-radius: 8px;
      width: 250px;
    }

    .score-info p {
      margin: 0;
    }
  </style>
</head>

<body>
  <div style="margin-top: 5%; text-align: center; display: flex; flex-direction: column; align-items: center;">
    <div><h2>Target</h2></div>
    <div class="pie-container"></div>
    <div class="score-info">
      <p><strong>5.6 of 8.0 Overall</strong></p>
    </div>
  </div>

  <script>
    function updatePieChart(targetPercent) {
      const pie = document.querySelector('.pie-container');
      const scoreInfo = document.querySelector('.score-info');

      pie.style.background = `conic-gradient(
        #0f207e 0% ${targetPercent}%, 
        #ccc ${targetPercent}% 100%
      )`;

      const overallScore = (targetPercent / 100) * 8.0;

      pie.querySelector('::after').textContent = `${targetPercent}%`;

      scoreInfo.innerHTML = `
        <p>Target: ${targetPercent}%</p>
        <p>Overall Score: ${overallScore.toFixed(1)}</p>
      `;
    }

    updatePieChart(70);
  </script>

</body>