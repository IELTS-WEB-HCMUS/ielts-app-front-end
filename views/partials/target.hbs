<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Target Progress Chart</title>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <style>
    .score-info {
      font-size: 20px;
      text-align: center;
      color: #f5f5f5;
      background-color: #333;
      padding: 10px 20px;
      border-radius: 8px;
      width: 250px;
      margin: 20px auto 0;
    }

    .score-info p {
      margin: 0;
    }
  </style>
</head>

<body>
  <div style="margin-top: 5%; text-align: center; display: flex; flex-direction: column; align-items: center;">
    <div><h2>Target</h2></div>
    <canvas id="targetChart" width="250" height="250"></canvas>
    <div class="score-info">
      <p><strong>5.6 of 8.0 Overall</strong></p>
    </div>
  </div>

  <script>
    function createTargetChart(targetPercent) {
      const ctx = document.getElementById('targetChart').getContext('2d');
      const overallScore = (targetPercent / 100) * 8.0;

      const chart = new Chart(ctx, {
        type: 'doughnut',
        data: {
          datasets: [{
            data: [targetPercent, 100 - targetPercent],
            backgroundColor: ['#0f207e', '#ccc'],
            borderWidth: 0,
          }]
        },
        options: {
          cutout: '75%',
          plugins: {
            tooltip: { enabled: false },
            legend: { display: false },
            title: {
              display: true,
              text: `${targetPercent}%`,
              color: '#fff',
              font: {
                size: 24,
                weight: 'bold'
              },
              padding: { top: 20, bottom: 0 },
            },
          },
        },
      });

      document.querySelector('.score-info').innerHTML = `
        <p>Target: ${targetPercent}%</p>
        <p>Overall Score: ${overallScore.toFixed(1)}</p>
      `;
    }

    createTargetChart(70);
  </script>
</body>
