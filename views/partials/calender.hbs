<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" rel="stylesheet"
    integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
</head>

<body>
  <div class="date-picker-overlay"></div>
  <div class="calendar-section">
    <div class="section-header">
      <i class="fas fa-calendar-day"></i>
      <h2>Lịch thi của bạn</h2>
    </div>
    <div class="exam-info">
      <div class="exam-date-box">
        <i class="fas fa-calendar-check"></i>
        Ngày bạn thi:
        <button id="exam-date-btn" class="info-value">
          <span id="selected-date">dd/mm/yyyy</span>
        </button>
      </div>
      <div class="remaining-days-box">
        <i class="fas fa-hourglass-half"></i>
        Số ngày còn lại:
        <span class="info-value" id="remaining-days">xx ngày</span>
      </div>
    </div>
    <input type="text" id="exam-date-input" style="display: none;">
  </div>
</body>
