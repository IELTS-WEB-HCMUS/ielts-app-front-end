            </div>
            <div class="col">
                <div id="question-area">

                </div>
                <div style="margin-top: 20px;">
                    <button id="next-question">Next Question</button>
                </div>
                <script src="../scripts/dotestpage.js"></script>
                <script>
                    // Câu hỏi kiểu SINGLE-SELECTION
                    const question1 = new Question(
                        '1',
                        'SINGLE-SELECTION',
                        'Wegener’s ideas about continental drift were widely disputed while he was alive.',
                        ['Apple', 'Banana', 'Cherry', 'Date'],
                        'Cherry' // Đáp án
                    );

                    // Câu hỏi kiểu MULTIPLE
                    const question2 = new Question(
                        '1',
                        'SINGLE-RADIO',
                        'Choose all the prime numbers from the list.',
                        ['Apple', 'Banana', 'Cherry', 'Date'],
                        'Cherry' // Đáp án
                    );

                    // Câu hỏi kiểu FILL-IN-THE-BLANK
                    const question3 = new Question(
                        '1',
                        'FILL-IN-THE-BLANK',
                        'Ten cua ban la ______________ Tuoi cua ban la __________ So thich ____________',
                        [], // Không có lựa chọn
                        'Paris' // Đáp án
                    );
                    const questions = [question1, question2, question3];
                    let currentQuestionIndex = 0;
            
                    // Hàm tải câu hỏi hiện tại
                    function loadCurrentQuestion() {
                        if (currentQuestionIndex < questions.length) {
                            loadQuestion(questions[currentQuestionIndex]);
                        } else {
                            const container = document.getElementById('question-area');
                            container.innerHTML = '<p>No more questions!</p>';
                        }
                    }
            
                    // Tải câu hỏi đầu tiên
                    loadCurrentQuestion();
            
                    // Xử lý sự kiện khi nhấn nút "Next Question"
                    document.getElementById('next-question').addEventListener('click', () => {
                        currentQuestionIndex++;
                        loadCurrentQuestion();
                    });
                </script>
            </div>
        </div>
        <div class="row" style=" height: 10%; background-color: var(--footer-dotest-color);">
            
        </div>
    </div>
</body> 
</html>