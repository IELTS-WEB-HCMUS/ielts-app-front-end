    height: auto;
    position: absolute;
    top: 0;
    left: 0;
    z-index: -1;
  }

  footer {
    background-color: #333;
    color: white;
    text-align: center;
    padding: 20px;
  }

  @media only screen and (max-width: 1024px) {
    .column {
